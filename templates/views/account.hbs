<!DOCTYPE html>
<html>
    <head>
        <title>Account Temp</title>
        {{> head}}
    </head>
    <body>
        {{> header}}        
        <main id="sign" class="min-fill-screen-y main-card">
            <div class="sign-wrapper main-card-inner">
                <div class="switch-sign">
                    <button id="go-signin">Sign In</button>
                    <button id="go-signup" class="sign-not-active">Sign Up</button>
                    <div id="switch-select"></div>
                </div>

                <form class="form-sign hidden-fadein-potato" name="signin" novalidate>
                    <h1>Welcome Back!</h1>

                    <div id="signin-error" class="form-bar error-message hidden">
                        X
                    </div>

                    <div class="form-bar">
                        <input type="text" class="form-input" name="signin-email" required>
                        <span class="form-input-placeholder">Email Address</span>
                    </div>
                    <div class="form-bar">
                        <input type="password" class="form-input" name="signin-password" required>
                        <span class="form-input-placeholder">Password</span>
                    </div>

                    <button class="submit-button center-block-elem">LOGIN</button>
                </form>
                    
                <form class="form-sign hidden-fadein-potato hidden-fadein-driver" name="signup" novalidate>
                    <h1>Create an Account</h1>
                       
                    <div id="signup-error" class="form-bar error-message hidden">
                        X
                    </div>
                        
                    <div class="form-bar form-bar__partial">
                        <div>
                            <input type="text" class="form-input" name="firstname" required>
                            <span class="form-input-placeholder">First Name</span>
                        </div>
                        
                        <div>
                            <input type="text" class="form-input" name="lastname" required>
                            <span class="form-input-placeholder">Last Name</span>
                        </div>
					</div>
					<div class="form-bar">
                        <input type="text" class="form-input"  name="username" required>
                        <span class="form-input-placeholder">Username</span>
					</div>
					<div class="form-bar">
                        <input type="text" class="form-input"  name="email" required>
                        <span class="form-input-placeholder">Email Address</span>
					</div>
                    <div class="form-bar">
					    <input type="password" class="form-input"  name="password" required>
                        <span class="form-input-placeholder">Password</span>
					</div>
                    <div class="form-bar">
                        <input type="password" class="form-input" name="reenter" required>
                        <span class="form-input-placeholder">Re-enter Password</span>
                    </div>
                    <div class="form-bar">
						<input type="file" class="form-input-verify" accept="pdf" name="verify" id="signup-verify" required>
						<label class="form-input-verify-placeholder" for="signup-verify">Add PDF Verification</label>
					</div>

                    <button class="submit-button center-block-elem">SIGN UP</button>
                </form>
            </div>
        </main>
        {{>footer}}
        <script src="/js/account-script.js"></script>
    </body>
</html>
